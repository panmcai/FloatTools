# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.ts text diff=typescript
*.tsx text diff=typescript
*.js text diff=javascript
*.jsx text diff=javascript
*.json text diff=json
*.css text diff=css
*.md text diff=markdown

# Shell scripts
*.sh text eol=lf

# Documentation
*.md text
*.txt text

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Archives
*.zip binary
*.tar.gz binary
*.rar binary

# Lock files
package-lock.json text eol=lf
pnpm-lock.yaml text eol=lf
yarn.lock text eol=lf
